<!DOCTYPE html>
<html>
<head>
    <title><%= user.username %>'s Blogs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">

    <nav class="bg-white border-b shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
            <div class="flex justify-between h-16 items-center">
                <!-- Left side -->
                <div class="flex items-center space-x-8 text-[15px] font-medium text-gray-700">
                    <a href="/" class="flex items-center hover:text-blue-600 transition">
                        <i class="fas fa-home mr-2"></i> Home
                    </a>
                    <div class="relative group">
                        <button class="flex items-center hover:text-blue-600 transition">
                            Categories <i class="fas fa-chevron-down ml-2 text-xs"></i>
                        </button>
                        <div class="absolute left-0 mt-2 w-48 bg-white border rounded-lg shadow-lg hidden group-hover:block">
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Science</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Health & Care</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Astronomy</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">IT</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Maths</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">History</a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Politics</a>
                        </div>
                    </div>
                    <!-- Post link for logged-in users -->
                    <% if (user) { %>
                        <a href="/post/<%= user.username %>" class="hover:text-blue-600 transition">Post</a>
                    <% } else { %>
                        <a href="/login" class="hover:text-blue-600 transition">Post</a>
                    <% } %>
                </div>

                <!-- Right side -->
                <div class="flex space-x-4 text-[15px] font-medium">
                    <% if (user) { %>
                        <a href="/blogs/<%= user.username %>" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                            My Blogs
                        </a>
                        <a href="/logout" class="px-4 py-2 border border-black text-black rounded-lg hover:bg-zinc-800 hover:text-white transition">
                            Logout
                        </a>
                    <% } else { %>
                        <a href="/register" class="px-4 py-2 bg-black text-white rounded-lg hover:bg-zinc-600 transition">
                            Register
                        </a>
                        <a href="/login" class="px-4 py-2 border border-black text-black rounded-lg hover:bg-zinc-800 hover:text-white transition">
                            Login
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto p-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
            <h1 class="text-3xl font-bold text-gray-900 mb-2 md:mb-0"><%= user.username.toUpperCase() %>'s Blog</h1>
            <div class="flex items-center space-x-3">
                <span class="text-sm text-gray-500">Logged in as</span>
                <span class="px-3 py-1 bg-gray-900 text-white rounded-full text-sm font-semibold"><%= user.username %></span>
            </div>
        </div>
        
        <!-- Search + CTA -->
        <div class="flex flex-col md:flex-row items-center justify-between mb-8 space-y-4 md:space-y-0 md:space-x-4">
            <input type="text" placeholder="Search blogs..." class="w-full md:w-1/2 border border-gray-300 rounded-xl p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500 transition-all">
            <a href="/post/<%= user.username %>" class="w-full md:w-auto text-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl shadow-md hover:bg-blue-700 transition-all">+ New Blog</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Main column for recent blog -->
            <div class="col-span-1 md:col-span-2 space-y-6">
                <% if (posts.length > 0) { %>
                    <% const recentPost = posts[0]; %>
                    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                        <h2 class="text-3xl font-bold text-gray-800 mb-4 leading-snug"><%= recentPost.title %></h2>
                        <div class="flex items-center space-x-2 text-gray-500 text-sm mb-6">
                            <span>By <%= user.username %></span>
                            <span class="text-xs">|</span>
                            <span><%= new Date(recentPost.createdAt).toLocaleDateString() %></span>
                        </div>
                        <p class="text-gray-700 mb-6 leading-relaxed"><%= recentPost.content1 %></p>
                        <% if (recentPost.pic1 || recentPost.pic2) { %>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
                                <% if (recentPost.pic1) { %>
                                    <img src="/uploads/<%= recentPost.pic1 %>" alt="<%= recentPost.title %> image" class="rounded-lg w-full h-auto object-cover max-h-96">
                                <% } %>
                                <% if (recentPost.pic2) { %>
                                    <img src="/uploads/<%= recentPost.pic2 %>" alt="<%= recentPost.title %> image 2" class="rounded-lg w-full h-auto object-cover max-h-96">
                                <% } %>
                            </div>
                        <% } %>
                        <% if (recentPost.content2) { %>
                            <p class="text-gray-700 leading-relaxed"><%= recentPost.content2 %></p>
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="bg-white p-6 rounded-xl shadow text-gray-500 text-center">No posts yet. Create your first blog!</div>
                <% } %>
            </div>

            <!-- Right column for recent posts -->
            <div class="col-span-1 space-y-6">
                <h3 class="text-lg font-bold mb-4 text-gray-800">Latest Blogs</h3>
                <% if (posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="bg-white p-4 rounded-xl shadow cursor-pointer hover:shadow-lg transition transform hover:-translate-y-1">
                            <div class="flex items-start gap-4">
                                <% if (post.pic1) { %>
                                    <img src="/uploads/<%= post.pic1 %>" class="w-20 h-20 object-cover rounded-lg flex-shrink-0">
                                <% } %>
                                <div class="flex-1">
                                    <h4 class="text-md font-semibold text-gray-800 leading-tight"><%= post.title %></h4>
                                    <p class="text-sm text-gray-500 mt-1">by <%= post.user.username %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="bg-white p-4 rounded-xl shadow text-gray-500 text-sm text-center">No other blogs to show.</div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
