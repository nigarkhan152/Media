  <div class="max-w-4xl mx-auto p-6 bg-white rounded-2xl shadow-lg mt-10">
  <!-- Heading -->
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Create New Blog Post</h2>

  <form action="/post" method="POST" enctype="multipart/form-data" class="space-y-6">

    <!-- Title -->
    <div>
      <label for="title" class="block text-sm font-medium text-gray-700">Heading</label>
      <input type="text" id="title" name="title" 
        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm p-2" 
        placeholder="Enter blog heading" required>
    </div>

    <!-- Content 1 -->
    <div>
      <label for="content1" class="block text-sm font-medium text-gray-700">Content 1</label>
      <textarea id="content1" name="content1" rows="4" 
        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm p-2"
        placeholder="Write the first part of your blog..." required></textarea>
    </div>

    <!-- Content 2 -->
    <div>
      <label for="content2" class="block text-sm font-medium text-gray-700">Content 2</label>
      <textarea id="content2" name="content2" rows="4" 
        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-black focus:ring-black sm:text-sm p-2"
        placeholder="Write the second part of your blog..."></textarea>
    </div>

    <!-- Picture 1 -->
    <div>
      <label for="picture1" class="block text-sm font-medium text-gray-700">Picture 1</label>
      <input type="file" id="picture1" name="pic1"
        class="mt-1 block w-1/5 text-sm text-gray-500 border border-gray-300  cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-black focus:border-black">
    </div>

    <!-- Picture 2 -->
    <div>
      <label for="picture2" class="block text-sm font-medium text-gray-700">Picture 2</label>
      <input type="file" id="picture2" name="pic2"
        class="mt-1 block w-1/5 text-sm text-gray-500 border border-gray-300  cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-black focus:border-black">
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end space-x-4">
      <button type="submit" class="px-6 py-2 bg-black text-white font-medium rounded-xl shadow hover:bg-zinc-300 hover:text-black transition">
        Post Blog
      </button>
            <button type="submit" class="px-6 py-2 bg-red-500 text-white font-medium rounded-xl shadow hover:bg-zinc-300 hover:text-black transition">
        Delete Blog
      </button>
    </div>
  </form>

    <div class="posts mt-20">
        <h3 class="text-zinc-600">Your Posts</h3>
